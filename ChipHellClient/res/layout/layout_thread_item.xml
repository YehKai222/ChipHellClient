<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="@drawable/card_bg_selector"
    android:orientation="vertical"
    android:padding="10dp" >

    <LinearLayout
        android:id="@+id/layout_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="3dp"
        android:layout_toLeftOf="@+id/textView_count"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/imageView_icon"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginRight="1dp"
            android:layout_marginTop="2dp" />

        <TextView
            android:id="@+id/textView_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:textColor="@color/black"
            tools:text="标题标题标题标题标题标题标题标题标题标题标题标题标题标题标题标题标题标题" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:background="@drawable/chh_red_list_selector_holo_light"
        android:clickable="true"
        android:gravity="center"
        android:textColor="@color/darker_gray"
        tools:text="55" />

    <TextView
        android:id="@+id/textView_by"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/textView_date"
        android:textColor="@color/darker_gray"
        tools:text="作者" />

    <TextView
        android:id="@+id/textView_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:textColor="@color/darker_gray"
        tools:text="2013-2-6 12:11" />

</RelativeLayout>