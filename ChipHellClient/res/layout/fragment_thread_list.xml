<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:float_lable="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false" >

    <ImageView
        android:id="@+id/emptyView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/logo" />

    <com.handmark.pulltorefresh.library.PullToRefreshListView
        android:id="@+id/listView_threads"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:clipToPadding="false"
        android:divider="@null"
        android:dividerHeight="5dp"
        android:paddingBottom="5dp"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"
        android:paddingTop="5dp"
        android:scrollbarSize="2dip"
        android:scrollbarStyle="outsideOverlay"
        android:scrollbarThumbVertical="@color/chh_red_with_alpha"
        android:smoothScrollbar="true"
        app:ptrDrawable="@drawable/red_ptr_rotate"
        app:ptrHeaderSubTextColor="@color/chh_red"
        app:ptrHeaderTextColor="@color/chh_red" />

    <LinearLayout
        android:id="@+id/layout_fast_reply"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@color/white"
        android:orientation="vertical"
        android:visibility="gone" >

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/chh_red" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <com.fei_ke.chiphellclient.ui.customviews.FloatLabelLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" >

                <EditText
                    android:id="@+id/editText_fast_reply"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingRight="30dp" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|right"
                    android:layout_marginBottom="2dp"
                    android:background="@drawable/chh_red_list_selector_holo_light"
                    android:src="@drawable/ic_face_grey" />
            </com.fei_ke.chiphellclient.ui.customviews.FloatLabelLayout>

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:background="@drawable/chh_red_list_selector_holo_light"
                android:src="@drawable/ic_send_grey"
                android:text="发送" />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>