<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:float_lable="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false" >

    <ImageView
        android:id="@+id/emptyView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/logo" />

    <com.handmark.pulltorefresh.library.PullToRefreshListView
        android:id="@+id/listView_threads"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:clipToPadding="false"
        android:divider="@null"
        android:dividerHeight="5dp"
        android:listSelector="@android:drawable/list_selector_background"
        android:paddingBottom="5dp"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"
        android:paddingTop="5dp"
        android:scrollbarSize="2dip"
        android:scrollbarStyle="outsideOverlay"
        android:scrollbarThumbVertical="@color/chh_red_with_alpha"
        android:smoothScrollbar="true"
        app:ptrDrawable="@drawable/red_ptr_rotate"
        app:ptrHeaderSubTextColor="@color/chh_red"
        app:ptrHeaderTextColor="@color/chh_red" />

    <LinearLayout
        android:id="@+id/layout_fast_reply"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@drawable/bg_card"
        android:orientation="horizontal"
        android:visibility="gone" >

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:src="@drawable/ic_face_grey" />

        <com.fei_ke.chiphellclient.ui.customviews.FloatLabelLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" >

            <EditText
                android:id="@+id/editText_fast_reply"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="30dp" />
        </com.fei_ke.chiphellclient.ui.customviews.FloatLabelLayout>

        <ImageButton
            android:src="@drawable/ic_send_grey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:text="发送" />
    </LinearLayout>

</FrameLayout>